    <array>

        <!-- PROJECT PACKAGE -->
        <dict>
            <key>CFBundleTypeName</key>
            <string>CircuitPro Project</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>app.circuitpro.project</string>
            </array>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>LSHandlerRank</key>
            <string>Owner</string>
